{
  "name": "@atomist/k8s-sdm",
  "version": "2.0.0",
  "description": "Atomist SDM for deploying, updating, and removing Kubernetes applications",
  "author": {
    "name": "Atomist",
    "email": "support@atomist.com",
    "url": "https://atomist.com/"
  },
  "license": "Apache-2.0",
  "homepage": "https://github.com/atomist/k8s-sdm#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atomist/k8s-sdm.git"
  },
  "bugs": {
    "url": "https://github.com/atomist/k8s-sdm/issues"
  },
  "keywords": [
    "atomist",
    "automation",
    "kubernetes",
    "sdm"
  ],
  "main": "./index.js",
  "types": "./index.d.ts",
  "dependencies": {
    "@atomist/automation-client": "2.0.0-master.20191213160252",
    "@atomist/automation-client-ext-humio": "^0.2.0",
    "@atomist/automation-client-ext-logzio": "^1.0.2",
    "@atomist/sdm": "2.0.0-master.20191213214023",
    "@atomist/sdm-core": "2.0.0-simplify-k8s-scheduler.20191219073826",
    "@atomist/sdm-pack-gcp": "0.1.0-master.20191208110459",
    "@atomist/sdm-pack-k8s": "2.0.0-k8s-scheduler.20191218132958",
    "@atomist/slack-messages": "^1.1.1",
    "@types/json-stringify-safe": "^5.0.0",
    "@types/lodash": "^4.14.136",
    "json-stringify-safe": "^5.0.1",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@atomist/sdm-local": "^1.2.1",
    "@types/mocha": "^5.2.7",
    "@types/power-assert": "^1.5.0",
    "espower-typescript": "^9.0.2",
    "mocha": "^6.2.0",
    "npm-run-all": "^4.1.5",
    "power-assert": "^1.6.1",
    "rimraf": "^2.6.3",
    "supervisor": "^0.12.0",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "typedoc": "^0.15.5",
    "typescript": "^3.7.3"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "autotest": "supervisor --watch index.ts,lib,test --extensions ts --no-restart-on exit --quiet --exec npm -- test",
    "build": "run-s compile test lint doc",
    "clean": "run-p clean:compile clean:test clean:doc clean:run",
    "clean:compile": "rimraf git-info.json \"*.{d.ts,js}{,.map}\" \"{bin,goals,lib,test}/**/*.{d.ts,js}{,.map}\" lib/typings/types.ts",
    "clean:dist": "run-s clean clean:npm",
    "clean:doc": "rimraf doc",
    "clean:npm": "rimraf node_modules",
    "clean:run": "rimraf *-v8.log profile.txt log",
    "clean:test": "rimraf .nyc_output coverage",
    "compile": "run-s git:info gql:gen compile:ts",
    "compile:ts": "tsc --project .",
    "doc": "typedoc --mode modules --excludeExternals --ignoreCompilerErrors --exclude \"**/*.d.ts\" --out doc *.ts goals/*.ts",
    "git:info": "atm-git-info",
    "gql:gen": "atm-gql-gen",
    "lint": "tslint --config tslint.json --format verbose --project .",
    "lint:fix": "npm run lint -- --fix",
    "start": "atm-start",
    "test": "mocha --require espower-typescript/guess \"test/**/*.test.ts\"",
    "test:one": "mocha --require espower-typescript/guess \"test/**/${TEST:-*.test.ts}\"",
    "typedoc": "npm run doc"
  },
  "engines": {
    "node": ">=8.2.0",
    "npm": ">=5.0.0"
  }
}
